{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNEXT",
    "noImplicitAny": true,
    "removeComments": false,
    "outDir": "dist",
    // ingnoreDeprecations and noImplicitUseStrict are required because of CustomJS's use of top level classes
    "ignoreDeprecations": "5.0",
    "noImplicitUseStrict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
}